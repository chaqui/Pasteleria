<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ati.queenspasteleria.view.fragments.ProductoFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/grisFondo">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/side_nav_bar"
            android:layout_weight="0.25"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/padding_text"
                android:background="@color/blancoFondo"
                android:layout_margin="@dimen/paddingCard"
                android:layout_marginLeft="@dimen/paddingCard"
                android:radius="@dimen/cornerRadiusCardView"
                android:layout_weight="0.25"
                >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/padding_text"
                android:background="@color/blancoFondo"
                android:layout_margin="@dimen/paddingCard"
                android:layout_marginLeft="@dimen/paddingCard"
                android:radius="@dimen/cornerRadiusCardView"
                android:layout_weight="0.50">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textAlignment="textEnd"
                    android:gravity="end" />
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/listOfertas"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/paddingCard"
                android:layout_marginLeft="@dimen/paddingCard"
                android:layout_weight="0.25"
                >



            </android.support.v7.widget.RecyclerView>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/listFotografias"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/paddingCard"
                android:layout_marginLeft="@dimen/paddingCard"
                android:layout_weight="0.25"
                >

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
